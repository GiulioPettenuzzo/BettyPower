<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_hidden_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    >

    <TextView
        android:id="@+id/away_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Christiano Ronaldo"
        android:textColor="@color/Tekt_dark_lighter"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/action_time"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/action_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:0"
        android:textColor="@color/Tekt_dark_lighter"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/action_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90'"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/away_action"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <ImageView
        android:id="@+id/away_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yellow_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="2dp" />
</android.support.constraint.ConstraintLayout>